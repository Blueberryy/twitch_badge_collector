{
  "manifest_version": 2,
  "name": "twitch_badge_collector",
  "version": "0.0.5",
  "description": "collect badge and point in twitch chat room",
  "short_name": "TBC",
  "options_ui": {
    "page": "public/option.html",
    "open_in_tab": false
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "webNavigation",
    "*://*.twitch.tv/*",
    "storage"
  ],
  "background": {
    "scripts": [
      "dist/js/extension_background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.twitch.tv/*"
      ],
      "css": [
        "dist/css/inject_background.css"
      ],
      "js": [
        "dist/js/jquery-3.5.1.slim.min.js", "dist/js/inject_background.js"
      ]
    }
  ],
  "page_action": {
    "default_title": "Twitch Badge Collector",
    "default_popup": "public/popup.html",
    "default_icon": {
      "16": "public/icons/icon16.png"
    }
  }
}