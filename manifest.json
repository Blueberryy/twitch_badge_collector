{
 "manifest_version": 2,
 "name": "twitch_badge_collector",
 "version": "0.0.1",
 "description": "collect badge and point in twitch chat room",
 "short_name": "TBC",
 "permissions": [
   "activeTab", 
   "declarativeContent", 
   "webNavigation", 
   "*://*.twitch.tv/*",
   "storage"
  ],
 "background":{
    "scripts": ["dist/js/extension_background.js"],
    "persistent" : false
 },
 "content_scripts": [
   {
     "matches": ["*://*.twitch.tv/*"],
     "css": ["dist/css/inject_background.css"],
     "js": ["dist/js/inject_background.js"]
   }
 ],
 "page_action": {
   "default_title": "Twitch Badge Collector",
   "default_popup": "public/popup.html",
   "default_icon": {
     "16": "public/icons/icon16.png"
   }
 }
}