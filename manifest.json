{
  "manifest_version": 2,
  "name": "__MSG_ExtensionName__",
  "version": "1.2.20",
  "description": "__MSG_ExtensionDesc__",
  "short_name": "TBC",
  "default_locale": "en",
  "icons": {
    "128": "public/icons/cc_icon128.png"
  },
  "permissions": [
    "webNavigation",
    "*://*.twitch.tv/*",
    "storage"
  ],
  "background": {
    "scripts": [
      "dist/js/extension_background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.twitch.tv/*"
      ],
      "all_frames" : true,
      "css": [
        "dist/css/inject_background.css"
      ],
      "js": [
        "dist/js/inject_background.js"
      ]
    }
  ],
  "page_action": {
    "default_title": "Twitch Badge Collector",
    "default_popup": "public/popup.html",
    "show_matches": [
      "https://www.twitch.tv/*",
      "https://multistre.am/*"
    ],
    "default_icon": {
      "128": "public/icons/cc_icon128.png"
    }
  }
}